# add ignore rules to .gitignore
cat >> .gitignore <<'EOF'
# Java bytecode
*.class

# common build/output dirs
/out/
target/
build/
EOF

# stop tracking .class files already in the repo (keeps them locally)
git rm --cached -r *.class || true

# optionally untrack common build/output directories
git rm -r --cached out target build || true

